                </div>
                <div class="col-6" bis_skin_checked="1">
                    <div class="bg-color card-Shadow rounded-2 p-1 py-4 px-4">
                        <div class="flex-between">
                            <h4 class="text-white">Select</h4>
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="mt-1">
                                        <form class="form-inline">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Search"
                                                    aria-label="Search" aria-describedby="button-addon2">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" type="submit"
                                                        id="button-addon2">Search</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="" bis_skin_checked="1">
                            <div class="row" bis_skin_checked="1">
                                <div class="my-3">
                                    <div class="bg-white card-Shadow rounded-2 p-2 overflow-scroll"
                                        style="height:470px;" bis_skin_checked="1">

                                        <div class="input-group mb-3">
                                            <div class="input-group-text">
                                                <input class="form-check-input mt-0" type="checkbox" value=""
                                                    aria-label="Checkbox for following text input" id="selectAll">
                                            </div>
                                            <div class="form-control" aria-label="Text input with checkbox">
                                                <h5 id="selectAllText">Select all</h5>
                                            </div>
                                        </div>

                                        <form action="/send_notification_fc" method="post">
                                            <% dat.forEach(s => { %>
                                            <div class="input-group mb-3">
                                                <div class="input-group-text">
                                                    <input class="form-check-input mt-0 individual-checkbox"
                                                        type="checkbox" name="emp_id" value="<%=s.emp_id %>"
                                                        aria-label="Checkbox for following text input">
                                                </div>
                                                <div class="form-control" aria-label="Text input with checkbox">
                                                    <h5 class="selectable-text"><%= s.name %></h5>
                                                </div>
                                            </div>
                                            <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-4" bis_skin_checked="1">
                    <div class="bg-color card-Shadow rounded-2 p-1 py-4 px-4" bis_skin_checked="1">
                        <div class="flex-between" bis_skin_checked="1">
                            <h4 class="mb-0 text-white">Send Notification !</h4>
                        </div>
                        <div class="" bis_skin_checked="1">
                            <div class="row" bis_skin_checked="1">
                                <div class="col-12 my-3">
                                    <div class="bg-white card-Shadow rounded-2 p-2" style="height: 480px;"
                                        bis_skin_checked="1">
                                        <div class="row-gap-2">
                                            <input name="heading" type="text" class="my-2 border-0 col-12"
                                                style="background-color: #D9D9D9;">
                                        </div>

                                        <div class="row-gap-2">
                                            <textarea name="note" class="my-2 border-0 col-12"
                                                style="height: 350px;; background-color: #D9D9D9;"></textarea>
                                        </div>

                                        <div class="row-gap-2">
                                            <button type="submit" class="col-4 rounded-5 mt-2" style="margin-left: 220px;">
                                                send
                                                <img src="assets/images/Send.png" height="25px" width="25px" alt="">
                                            </button>
                                        </div>

                                        </form>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </body>
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="assets/js/jquery-3.6.3.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/main.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/Toggels.js"></script>
    <script>
        $("#some-menu").load("navbars.ejs");

        // Select all checkboxes functionality
        document.getElementById('selectAll').addEventListener('change', function () {
            const checkboxes = document.querySelectorAll('.individual-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });

        // Click on <h5> to toggle checkbox in front of it
        document.querySelectorAll('.selectable-text').forEach(item => {
            item.addEventListener('click', function () {
                const checkbox = this.parentElement.previousElementSibling.querySelector('input[type="checkbox"]');
                checkbox.checked = !checkbox.checked;
            });
        });

        // Click on Select All <h5> text to toggle the Select All checkbox
        document.getElementById('selectAllText').addEventListener('click', function () {
            const selectAllCheckbox = document.getElementById('selectAll');
            selectAllCheckbox.checked = !selectAllCheckbox.checked;
            const event = new Event('change');
            selectAllCheckbox.dispatchEvent(event);
        });
    </script>

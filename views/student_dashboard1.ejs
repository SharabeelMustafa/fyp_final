<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="assets/css/bootstrap.min.css" />
  <link rel="stylesheet" href="assets/css/style.css" />
  <link rel="stylesheet" href="Style/panal_style.css">
  <title>Demo 2</title>
</head>

<body>
  <!-- Bars -->
  <div class="container-fluid p-0" id="some-menu"></div>
  <!--*** BARS END ***-->

  <div class="page-wrapper px-3">
    <div class="container-fluid rounded-2 px-0">
      <div class="d-flex justify-content-between bg-color rounded-3 p-3 gap-2 card-shadow">
        <div class="py-3">
          <% let fullString=currentDate.toString(); %>
            <% let desiredPart=fullString.substring(0, 21); %>
              <p class="small text-white my-5">
                <%= desiredPart %>
              </p>
              <h2 class="mb-0 text-white">Welcome, <%= student.name %>!</h2>
              <p class="mb-0 text-white">Always stay updated in your Bus portal</p>
        </div>
        <div class="me-2">
          <img src="uploads/<%= student.profile_img %>" class="r-img" alt="" width="200px" height="200px" />
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-4">
          <div class="d-flex justify-content-between bg-color rounded-3 p-3 gap-2 card-shadow">
            <div>
              <h2 class="mb-lg-5 text-white">Bus info</h2>
              <button class="btn btn-primary bg-dark btn-blue">View</button>
            </div>
            <div class="me-2">
              <!-- <img width="246px" height="189px" src="./assets/images/busImage.png" alt="" /> -->
            </div>
          </div>
          <div class="d-flex justify-content-between bg-color rounded-3 p-3 gap-2 card-shadow mt-3">
            <div>
              <h2 class="mb-lg-5 text-white">Bus info</h2>
              <button class="btn btn-primary bg-dark btn-blue w-75">View</button>
            </div>
            <div class="me-2">
              <!-- <img width="246px" height="189px" src="./assets/images/busImage.png" alt="" /> -->
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="bg-color card-shadow rounded-2 mb-3 p-4">
            <div class="flex-between">
              <h3 class="mb-0 text-white">Notification!</h3>
            </div>
            <div>
              <div class="row overflow-auto flex-nowrap" style="height: 250px;">
                <% notification.forEach(notif=> { %>
                  <div class="col-lg-3 my-3">
                    <div class="bg-white card-shadow rounded-2 mb-3 p-2" style="height: 200px; width: 200px;">
                      <a href="/dell_si_notif/<%= notif.sin_id %>">
                        <img src="assets/images/icons/close.svg" height="10px" width="10px" alt="" style="float:right">
                      </a>
                      <div class="m-2">
                        <h5>
                          <%= notif.heading %>
                        </h5>
                        <p>
                          <%= notif.note %>
                        </p>
                        <br>
                        <% let fullString=notif.update_at.toString(); %>
                          <% let desiredPart=fullString.substring(0, 21); %>
                            <p>
                              <%= desiredPart %>
                            </p>
                      </div>
                    </div>
                  </div>
                  <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Signup Overlay -->
      <div class="overlay" id="signup-overlay">
        <div class="overlay-content">
          <div class="text-center">
            <img src="./assets/images/logo1.png" width="150px" height="150px" alt="">
            <h2 class="mb-0">Add Registration of new account</h2>
          </div>
          <div class="row">
            <div class="col-6">
              <div class="mb-3">
                <label for="routeSelect" class="form-label regular small">Select Route</label>
                <select name="route" id="routeSelect" class="form-control">
                  <% rou.forEach(r=> { %>
                    <option value="<%= r.r_id %>">
                      <%= r.route_name %>
                    </option>
                    <% }); %>
                </select>
                <div class="col-6">
                  <div class="mb-3">
                    <label for="stopSelect" class="form-label regular small">Add Stop</label>
                    <select name="stop" id="stopSelect" class="form-control">
                      <!-- Options will be dynamically populated based on the selected route -->
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-evenly align-items-center pt-5 mt-3">
              <button class="btn btn-danger px-5 w-75 text-white bg-color">Register</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <input type="hidden" id="show-signup" class="mxc1 text-danger" value="<%= RESS %>">

    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="assets/js/jquery-3.6.3.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/main.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/Toggels.js"></script>
    <script>
      $("#some-menu").load("navbars_stu.ejs");

      const b = document.getElementById('show-signup');
      const a = b.value;

      if (a == 0) {
        document.getElementById('signup-overlay').style.display = 'none';
      } else {
        document.getElementById('signup-overlay').style.display = 'flex';
      }

      document.addEventListener('DOMContentLoaded', () => {
        const routeSelect = document.getElementById('routeSelect');
        const stopSelect = document.getElementById('stopSelect');
        const stops = <% - JSON.stringify(stu) %>; // Assuming `stu` contains stops data

        routeSelect.addEventListener('change', () => {
          const selectedRouteId = routeSelect.value;
          stopSelect.innerHTML = ''; // Clear existing options

          const filteredStops = stops.filter(stop => stop.r_id == selectedRouteId);

          filteredStops.forEach(stop => {
            const option = document.createElement('option');
            option.value = stop.s_id;
            option.textContent = stop.stop_name;
            stopSelect.appendChild(option);
          });
        });

        // Trigger change event on load to populate stops for the initially selected route
        routeSelect.dispatchEvent(new Event('change'));
      });
    </script>

    <footer class="mxc">
      <div class="mtc rounded-3 p-1 gap-2 bg-color">
        <h5 class="text-white">CUI Bus Portal</h5>
      </div>
    </footer>
  </div>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Challan Form</title>
    <link rel="stylesheet" href="Style/challan.css">
</head>
<body>
    <div class="challan-container">
        <% ['Accountant Copy', 'Student Copy', 'Department Copy'].forEach(copyType => { %>
        <div class="challan-form">
            <div class="header">
                <div class="bank-info">
                    <p>ASKARI BANK</p>
                    <p>Challan # 2407006613</p>
                    <p>1261000952313</p>
                </div>
                <div class="uni-info">
                    <p>COMSATS University</p>
                    <p>Wah</p>
                </div>
                <div class="issue-date">
                    <p>Issue Date: <%= new Date().toLocaleDateString() %></p>
                </div>
            </div>
            <div class="student-info">
                <p>Reg. No.: <%= challanData.regNo %></p>
                <p>Name: <%= challanData.name %></p>
                <p>Route Name: <%= challanData.routeName %></p>
                <p>Stop Name: <%= challanData.stopName %></p>
                <p>Session: <%= challanData.session %></p>
            </div>
            <div class="fees-info">
                <table>
                    <tr>
                        <th>Description</th>
                        <th>Amount (Rupees)</th>
                    </tr>
                    <% challanData.feesBreakdown.forEach(fee => { %>
                    <tr>
                        <td><%= fee.description %></td>
                        <td><%= fee.amount.toLocaleString() %></td>
                    </tr>
                    <% }) %>
                </table>
            </div>
            <div class="footer">
                <p>Bank Stamp</p>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>
